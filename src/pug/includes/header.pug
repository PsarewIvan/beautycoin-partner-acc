block header

    include ../components/tooltip.pug
    include ../icons/icon-exit.pug
    include ../icons/icon-coin.pug
    include ../icons/icon-user.pug
    include ../icons/icon-list.pug
    include ../icons/icon-arrow-right.pug

    header.header
        .header__content
            a.header__logo(href='./')
                img(src='img/logo.svg')
            nav.nav
                ul.nav__list
                    li.nav-element(class=page === 'index' ? 'nav-element_active' : '')
                        a.nav-element__link(href='./' class=page === 'index' ? 'nav-element__link_active' : '')
                            +icon-list('nav-element__icon')
                            span Клиенты
                    li.nav-element(class=page === 'write-off' ? 'nav-element_active' : '')
                        a.nav-element__link(href='./write-off.html' class=page === 'write-off' ? 'nav-element__link_active' : '')
                            +icon-arrow-right('nav-element__icon')
                            span Списания
                    li.nav-element(class=page === 'profile' ? 'nav-element_active' : '')
                        a.nav-element__link(href='./profile.html' class=page === 'profile' ? 'nav-element__link_active' : '')
                            +icon-user('nav-element__icon')
                            span Профиль
            button.button-icon.header__button.tooltip-trigger.js-tooltip-trigger
                +icon-exit('header__button-icon')
                +tooltip({text: 'Выйти из учетной записи'})
